        <Label 
            Text="Welcome to Contacts Page!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button Text ="Add" x:Name="btnAdd" Clicked="btnAdd_Clicked"  />
        <Button Text ="Edit" x:Name="btnEdit" Clicked="btnEdit_Clicked"  />
    </VerticalStackLayout>
</ContentPage>